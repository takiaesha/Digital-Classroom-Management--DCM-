<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/NavajoWhite"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Enter The Number Here"
    />

    <EditText android:layout_width="300dp"
              android:layout_height="50dp"
              android:layout_marginTop="30dp"
              android:background="#FAFAFA"
              android:gravity="start"
              android:lines="15"
              android:hint="Write a Phone number +880xx.."
              android:inputType="phone"
              android:id="@+id/edittextid"

              android:textAlignment="center"/>

   <Button android:layout_width="wrap_content" android:layout_height="40dp"
           android:layout_marginTop="10dp"
           android:id="@+id/buttonid"
           android:onClick="storePhoneNum"
           android:text="ok"
           android:textAllCaps="false"
   />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:textColor="@android:color/darker_gray"
            android:text="Updated Message:"
    />

    <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:textColor="@android:color/holo_blue_bright"
    />



</LinearLayout>